<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bpbdapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BPBDApp">
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ReportActivity" />
        <activity android:name=".MemoDetailActivity" />
        <activity android:name=".MemoReportActivity" />
        <activity android:name=".CreateTaskActivity" />
        <activity android:name=".TaskDetailActivity" />
        <activity android:name=".TaskReportActivity" />
        <activity android:name=".IdCardDesignerActivity" />
        <activity android:name=".ThemeSettingsActivity" />
        <activity android:name=".PlaceMemberActivity" />
        <activity android:name=".PlacementApprovalActivity" />
        <activity android:name=".CreateMemoActivity" />
        <activity android:name=".MemoReviewActivity" />
        <activity android:name=".IdCardDisplayActivity" />
        <activity android:name=".LogActivity" />
        <activity android:name=".ChatListActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".ExpenseApprovalActivity" />
        <activity android:name=".FinancialReportActivity" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
